@inherits LayoutComponentBase
@using expenzo.Services
@inject AuthenticationStateService authStateService

<div class="page">
    @if (authStateService.IsAuthenticated())
    {
        <div class="sidebar">
            <NavMenu />
        </div>
        
        
    }
    

    <main>
        @if (authStateService.IsAuthenticated())
        {
            <div class="top-row px-4">
                
            </div>
        
        
        }
        
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>